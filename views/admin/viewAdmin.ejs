<body>
    <div class="container-fluid">
        <!------------ Navbar -------------------->
        <nav class="navbar  navbar-light bg-light">
            <div class="container ">
                <a class="navbar-brand" href="#">Hey Admin</a>
                <div class="container col-4 ">
                    <a class="nav-item btn btn-outline-success" href="/admin/home">profile</a>
                    <a class="nav-item btn btn-outline-success" href="/admin/dashboard">Dashboard</a>
                
                </div>
               

            </div>
          </nav>
        <h1 class="text-center my-5">Admins</h1>

        <div class="container col-8">
            <table class="table table-bordered table-striped" >
                <thead>
                    <tr>
                       
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Phone</th>
                     

                    </tr>
                </thead>
                <tbody>
                    <% if(admin.length >0){
                        for(let i=0;i<admin.length;i++){ %>
                            <tr>
                                <td><%= i+1%> </td>
                                <td><%= admin[i].name%> </td>
                                <td><%= admin[i].email%> </td>
                                <td><%= admin[i].mobile%> </td>
                               
                            </tr>  

                       <% }
                        %>
                        

                 <%   }else { %>

                  <tr>
                    <td>No Admin Found</td>
                  </tr>
                <%  }%>
                </tbody>
               
            </table> 
        </div>
        
       
    </div>

