<% include("../layouts/header.ejs") %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body style="background:linear-gradient(#b9ebbb,#ffffff);">
        <nav class="navbar  navbar-light bg-light">
            <div class="container col-10">
            <a class="navbar-brand" href="#">Hey Admin</a>
            <div class="container col-4 ">
                <a class="nav-item btn btn-outline-success" href="/admin/home">profile</a>
                <a class="nav-item btn btn-outline-success" href="/admin/dashboard">Dashboard</a>
                <a class="nav-item btn btn-outline-success" href="/admin/addUser">Add User</a>
            </div>
            
                <button class="btn btn-outline-primary "><a href="/admin/logout" style="text-decoration: none;color: black;">Logout</a></button>
            
            </div>
        </nav>
        <h1 class="h1 m-5 text-center" style="color: #243526;">Edit User</h1>
        <div class="text-center container col-4 ">
            <form action="" method="post" class="form-control border  rounded py-4"  style="box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.5), -5px -5px 10px rgba(0, 0, 0, 0.5)" ;>
                <input class="form-control my-4" type="text" name="name" value="<%= user.name %>" placeholder="Name" required>
        
                <input class="form-control my-4" type="email" value="<%= user.email %>" name="email" placeholder="Email" required>
                <input class="form-control my-4" type="text" value="<%= user.mobile %>" name="phone" placeholder="Phone number" required>
                
      
                    <label for="">Do you want to make this user as Admin</label>
                    <input class="form-check-input" type="radio" name="adminCheck" value="1" <% if(user.is_admin) {%>checked <%}%> >
                    <label class="form-check-label mx-2">YES</label>
                  
                    
                    <input class="form-check-input" type="radio" name="adminCheck" value="0" <% if(!user.is_admin) {%>checked <%}%> >
                    <label class="form-check-label mx-2">No</label>
                  
                <input type="hidden" name="id" value="<%= user._id  %>">
        
                <div class="text-center">
                    <input class="btn btn-outline-secondary mt-5 " style="color: #243526;  box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.9);" type="submit" value="Update User">
                </div>
            </form>
            <% if(typeof message !== 'undefined'){%>
            
                <p style="color: green;"><%= message %> </p>
                <% }%>
           
        </div>



