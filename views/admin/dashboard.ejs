<% include('../layouts/header.ejs') %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>
<body>
    <div class="container-fluid">
        <!------------ Navbar -------------------->
        <nav class="navbar  navbar-light bg-light">
            <div class="container ">
                <a class="navbar-brand" href="#">Hey Admin</a>
                <div class="container col-4 ">
                    <a class="nav-item btn btn-outline-success" href="/admin/home">profile</a>
                    <a class="nav-item btn btn-outline-success" href="/admin/dashboard">Dashboard</a>
                    <a class="nav-item btn btn-outline-success" href="/admin/addUser">Add User</a>
                
                </div>
                <form class="d-flex">
                    <input class="form-control me-2" type="text" placeholder="Search " name="search" >
                    <input class="btn btn-outline-success" type="submit" value="Search">
                </form>
               

            </div>
          </nav>
        <h1 class="text-center my-5">Dashboard</h1>

        <div class="container col-8">
            <table class="table table-bordered table-striped" >
                <thead>
                    <tr>
                       
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Action</th>

                    </tr>
                </thead>
                <tbody>
                    <% if(users.length >0){
                        for(let i=0;i<users.length;i++){ %>
                            <tr>
                                <td><%= i+1%> </td>
                                <td><%= users[i].name%> </td>
                                <td><%= users[i].email%> </td>
                                <td><%= users[i].mobile%> </td>
                                <td>
                                    <button class="btn btn-success"><a href="/admin/editUser?id=<%= users[i]._id%>" style="text-decoration: none; color: aliceblue;"> Edit</a></button>
                                    <button class="btn btn-danger"><a href="/admin/deleteUser?id=<%=users[i]._id%>"style="text-decoration: none; color: aliceblue;">Delete</a></a> </button>

                                    </td>
                            </tr>  

                       <% }
                        %>
                        

                 <%   }else { %>

                  <tr>
                    <td>No user Found</td>
                  </tr>
                <%  }%>
                </tbody>
               
            </table> 
        </div>
        
       
    </div>

<% include('../layouts/footer.ejs') %>