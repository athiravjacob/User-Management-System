<% include("../layouts/header.ejs") %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body style="background:linear-gradient(#e4b9eb,#ffffff);">
    
<h1 class="h1 m-5 text-center" style="color: #332435;">User Registration Form</h1>
<div class="text-center container col-4 ">
    <form action="" method="post" class="form-control border  rounded py-4"  style="box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.5), -5px -5px 10px rgba(0, 0, 0, 0.5)" ;>
        <input class="form-control my-4" type="text" name="name" placeholder="Name" required>
   
        <input class="form-control my-4" type="email" name="email" placeholder="Email" required>
        <input class="form-control my-4" type="text" name="phone" placeholder="Phone number" required>
       
        <input class="form-control my-4" type="password" name="password"  placeholder="password" required>
        <div class="text-center">
            <input class="btn btn-outline-secondary mt-5 " style="color: #332435;  box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.9);" type="submit" value="Register">
           </div>
    </form>
    <% if(typeof message !== 'undefined'){%>
    
        <p style="color: green;"><%= message %>.Please <a href="/login" style="text-decoration: none;">LOGIN </a></p>
        <% }else{ %>
            <p><a href="/login" style="text-decoration: none;">Login </a> If already registered</p>
        <% } %>
</div>



