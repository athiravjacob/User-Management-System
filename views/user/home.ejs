<body  style="background:linear-gradient(#e4b9eb,#ffffff);">
    <h1 class="text-center h1 my-5">Welcome back <%= user.name %></h1>

        <div class="container  col-6 text-center" style="box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.5);">
            <h6 class="py-5">Your Details Are Shown Below</h6>
            <table class="table table-striped">
                <tbody>
                    <tr>
                        <th scope="row">1</th>
                        <td>Name</td>
                        <td><%= user.name %></td>
                    </tr>
                    <tr>
                        <th scope="row">2</th>
                        <td>Email</td>
                        <td><%= user.email %></td>
                    </tr>
                    <tr>
                        <th scope="row">3</th>
                        <td>Phone</td>
                        <td><%= user.mobile %></td>
                    </tr>
                </tbody>
            </table>
            <button class="btn btn-outline-secondary my-5"  ><a href="/logout" class="p-3" style="text-decoration: none; color: #332435;">Logout</a></button>
    </div>

